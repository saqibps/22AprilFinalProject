<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#EFEBE9"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/name_tv_volunteer_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sample name"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/blood_group_tv_volunteer_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            tools:text="Sample Group"
            android:paddingLeft="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/exchange_donation_tv_volunteer_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            tools:text="Exchange Donation"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status : "
                android:textSize="15sp"/>

        <TextView
            android:id="@+id/donation_status_tv_volunteer_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Not donated Yet"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>