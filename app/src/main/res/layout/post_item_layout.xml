<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/name_tv_post_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Sample Name"
        android:textSize="20sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/desc_tv_post_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Sample description"
        android:maxLines="2"
        android:textSize="15sp"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urgency : "
            android:textSize="20sp"
            android:textColor="#000"/>

    <TextView
        android:id="@+id/urgency_tv_post_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sample Urgency"
        android:textSize="20sp"
        android:textColor="#F44336"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact at : "
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/contact_tv_post_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123456789"
            android:textSize="20sp"
            android:textColor="#0D47A1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Instructions : "
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/instructions_tv_post_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Contact me when u reached at hospital on my given number.."
            android:maxLines="2"
            android:textSize="15sp"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volunteers uptil Now : "
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/volunteers_tv_post_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12"
            android:textSize="20sp"
            android:textColor="#0D47A1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current requirement : "
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/current_requirement_tv_post_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="8"
            android:textSize="20sp"
            android:textColor="#0D47A1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/volunteer_bt_post_item"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Volunteer"
            android:textAllCaps="false"
             />

        <Button
            android:id="@+id/comment_bt_post_item"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Comment"
            android:textAllCaps="false" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#303F9F"/>


</LinearLayout>