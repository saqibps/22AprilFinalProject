<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#EFEBE9"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_tv__my_post_detail_volunteer_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sample name"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/blood_group_tv__my_post_detail_volunteer_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sample Blood Group"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/exchange_donation_tv_my_post_detail_volunteer_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            tools:text="Exchange Donation"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

        <Button
            android:id="@+id/donated_bt_my_post_detail_volunteer_item"
            android:layout_width="0dp"
            android:text="Donated"
            android:textAllCaps="false"
            android:background="@drawable/rectangular_edit_text"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

            <Button
                android:id="@+id/notdonated_bt_my_post_detail_volunteer_item"
                android:layout_width="0dp"
                android:text="Not Donated"
                android:textAllCaps="false"
                android:background="@drawable/rectangular_edit_text"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>