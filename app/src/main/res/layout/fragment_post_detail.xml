<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PostDetail">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sample Name"
                android:textSize="30sp"
                android:textColor="#000"/>

            <RatingBar
                android:id="@+id/rating_star_post_detail_fragment"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Units Required : "
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/units_req_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4 "
                android:textColor="#0D47A1"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation Received : "
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/donation_received_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2 "
                android:textColor="#0D47A1"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Still Required : "
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/still_required_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2 "
                android:textColor="#0D47A1"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group : "
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/blood_group_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="B+ "
                android:textColor="#0D47A1"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location : "
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/location_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Karachi,Sindh,Pakistan "
                android:textColor="#0D47A1"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital : "
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/hospital_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Aga Khan "
                android:textColor="#0D47A1"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urgency : "
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/urgency_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Within 12 hours "
                android:textColor="#F44336"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relation with Patient : "
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/relation_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Father "
                android:textColor="#0D47A1"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No : "
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/contact_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123456789 "
                android:textColor="#0D47A1"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Instruction : "
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/instruction_tv_post_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Call me when u reached at hospital "
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volunteers"
                android:textSize="30sp"
                android:textColor="#BF360C"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/volunteers_recycler_view_post_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textSize="30sp"
                android:textColor="#BF360C"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comments_recycler_view_post_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/comment_et_post_detail_fragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangular_edit_text"
                android:layout_weight="3"/>

            <Button
                android:id="@+id/comment_bt_post_detail_fragment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Post"
                android:paddingLeft="10dp"
                android:enabled="false"
                android:textColor="@android:color/black"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>

</ScrollView>